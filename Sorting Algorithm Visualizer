	<script type="text/javascript">
	
		var data1 = [420,130,540,320,422,70,310,454,220,234,154,123,176,265,465,356,602,234,136,267,565,244,43,267,377,32,65,86,231];
		var len = data1.length;
		var myVar = null;
		function init()
		{
			for(var v=0;v<len;v++){
				var name = "bar"+v;
				document.getElementById(name).style.backgroundColor = 'black';
			}
			clearTimeout(myVar);
			clearTimeout(mysSort);
			sSortMin=data1[0];
			minIndex=0;
			i=0;
			j=0;
			k=0;
			count=0;
			data1 = [420,130,540,320,422,70,310,454,220,234,154,123,176,265,465,356,602,234,136,267,565,244,43,267,377,32,65,86,231];
			for(var i=0;i<len;i++){
				var name = "bar"+i;
				document.getElementById(name).style.width = 16;
				document.getElementById(name).style.height = data1[i];
				document.getElementById(name).style.backgroundColor = 'black';

			}

		}

		var i=0;
		var count=0;
		function bSort()
		{
				clearTimeout(myVar);
				if(document.getElementById('bar0').style.backgroundColor == 'green'){
						i=0;
						count=0;
						clearTimeout(myVar);
				}				

				if(data1[i] > data1[i+1])
				{
					document.getElementById('bar'+i).style.backgroundColor = 'red';
					temp= data1[i];
					data1[i] = data1[i+1];
					data1[i+1] = temp;
					document.getElementById("bar"+(i+1)).style.backgroundColor = 'blue';
					bSortDisplay(i);
				}
				i++;
				if(i==(len-count)) {
					document.getElementById('bar'+(i-1)).style.backgroundColor = 'green';
					i=0;
					count++;
				}
				myVar = setTimeout(bSort,1010-(document.getElementById('myRange').value));
		}

		function bSortDisplay(i)
		{
			clearTimeout(myVar);
			setTimeout(function(){
				document.getElementById("bar"+i).style.height = data1[i];
				document.getElementById("bar"+(i+1)).style.height = data1[i+1];
				document.getElementById("bar"+i).style.backgroundColor = 'black';
				document.getElementById("bar"+(i+1)).style.backgroundColor = 'black';
			},1010-(document.getElementById('myRange').value));
		}

		var j=0;
		var k=0;
		var sSortMin=data1[0];
		var minIndex=0;
		var mysSort =null;
		function sSort()
		{	
			if(k<len-1){
					j=k;
					sSortMin=data1[k+1];
					while(j<len+2)
					{
						
							if(data1[j] <= sSortMin)
							{
								minIndex = j;
								sSortMin = data1[j];
							}

						j++;
					}

					document.getElementById('bar'+minIndex).style.backgroundColor = 'red';

					var temp2= data1[k];
					data1[k] = data1[minIndex];
					data1[minIndex] = temp2;
					sSortDisplay(minIndex,k);
					document.getElementById('bar'+k).style.backgroundColor = 'blue';
					k++;
					mysSort = setTimeout(sSort,1510-(document.getElementById('myRange').value));
			}
			if(isSorted())
			{
				setTimeout(function(){
					for(var l=0;l<len;l++)
					{
						document.getElementById('bar'+l).style.backgroundColor='green';
					}
				},1000);
			}
		
		}

		function sSortDisplay(minIndex,k)
		{
			clearTimeout(mysSort);
			setTimeout(function(){
				document.getElementById("bar"+minIndex).style.height = data1[minIndex];
				document.getElementById("bar"+k).style.height = data1[k];
				document.getElementById("bar"+minIndex).style.backgroundColor = 'black';
				document.getElementById("bar"+k).style.backgroundColor = 'green';
			},1510-(document.getElementById('myRange').value));
		}

		function isSorted(){

			for(var i=0;i<len;i++)
			{
				if(data1[i]>data1[i+1]){
					return 0;
				}
			}

			return 1;
		}




		function hover(bar){

			var height = document.getElementById(bar).style.height;
			document.getElementById(bar).title = parseInt(height);
		}


	</script>


